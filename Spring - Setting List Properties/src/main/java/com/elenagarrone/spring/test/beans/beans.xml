<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="basket" class="com.elenagarrone.spring.test.FruitBasket">
	<constructor-arg value="John's basket"></constructor-arg>
	<constructor-arg>
		<list>
			<value>apple</value>
			<value>banana</value>
			<value>orange</value>
			<value>kiwi</value>
			<value>pear</value>
			<value>orange</value>
		</list>
		
		<!-- I can change the list tag with a set and it will still work:
		 
		<set>
			<value>apple</value>
			<value>banana</value>
			<value>orange</value>
			<value>kiwi</value>
			<value>pear</value>
			<value>orange</value>
		</set> 
		
		-->
	</constructor-arg>
	</bean>
</beans>
